@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow">
            <div class="card-body text-center py-5">
                <i class="fas fa-link fa-4x text-primary mb-4"></i>
                <h2 class="mb-4">URL Shortener</h2>
                <p class="text-muted mb-4">
                    Create short, shareable links from long URLs
                </p>
                
                <a href="/auth/login" class="btn btn-primary btn-lg">
                    <i class="fab fa-discord me-2"></i>
                    Login with Discord
                </a>
                
                <div class="mt-4">
                    <small class="text-muted">
                        <i class="fas fa-lock me-1"></i>
                        Secure authentication via Discord
                    </small>
                </div>
            </div>
        </div>
        
        <div class="text-center mt-4">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="fas fa-info-circle me-2"></i>Features
                    </h6>
                    <div class="row text-start">
                        <div class="col-12">
                            <small class="text-muted">
                                <i class="fas fa-check text-success me-2"></i>Generate short URLs<br>
                                <i class="fas fa-check text-success me-2"></i>Track click statistics<br>
                                <i class="fas fa-check text-success me-2"></i>Manage your links<br>
                                <i class="fas fa-check text-success me-2"></i>Copy links instantly
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>